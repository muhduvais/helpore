{
  "compilerOptions": {
    "target": "ES6",      
    "module": "CommonJS",    
    "outDir": "./dist",          
    "rootDir": "./src",           
    "esModuleInterop": true,       
    "moduleResolution": "node",
    "strict": false,              
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "../frontend/src/types"],   
  "exclude": ["node_modules", "dist"]
}












